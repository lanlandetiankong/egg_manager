<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://code.alibabatech.com/schema/dubbo
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!--                *********基本配置 start**********             -->
    <!-- 消费方应用名，用于计算依赖关系，不是匹配条件，不要与提供方一样 -->
    <dubbo:application name="${egg.dubbo.application.name}"/>
    <dubbo:registry address="zookeeper://127.0.0.1:2181" timeout="3000" />
    <!-- port值-1 表示让dubbo自行找一个可用的port  -->
    <dubbo:protocol port="-1" name="dubbo" host="127.0.0.1" serialization="hessian2"/>

</beans>