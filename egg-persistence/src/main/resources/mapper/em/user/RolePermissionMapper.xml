<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egg.manager.persistence.em.user.db.mysql.mapper.RolePermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.egg.manager.persistence.em.user.db.mysql.entity.RolePermission">
        <id column="fid" property="fid"/>
        <result column="define_role_id" property="defineRoleId"/>
        <result column="define_permission_id" property="definePermissionId"/>
        <result column="type" property="type"/>
        <result column="remark" property="remark"/>
        <result column="state" property="state"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="last_modifyer_id" property="lastModifyerId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        fid, define_role_id,define_permission_id,type,
        remark,state, create_time, update_time,create_user_id,last_modifyer_id
    </sql>

    <sql id="Base_Insert_Column_List">
        fid, define_role_id,define_permission_id,type, remark,state, create_time, update_time,create_user_id,last_modifyer_id
    </sql>

    <sql id="Base_Insert_Item_Column_List">
          #{item.fid},
          #{item.defineRoleId},
          #{item.definePermissionId},
          #{item.type},
          #{item.remark},
          #{item.state},
          #{item.createTime},
          #{item.updateTime},
          #{item.createUserId},
          #{item.lastModifyerId}
    </sql>

    <insert id="customBatchInsert">
        INSERT INTO em_role_permission(
        <include refid="Base_Insert_Column_List"/>
        )
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
            <include refid="Base_Insert_Item_Column_List"/>
            )
        </foreach>
    </insert>
    <update id="batchUpdateStateByRole">
        UPDATE em_role_permission
        SET state = #{stateVal}
        <if test="loginUser != null">
            ,last_modifyer_id = #{loginUser.fid}
        </if>
        where define_role_id = #{roleId}
        and define_permission_id IN
        <foreach collection="permissionIdList" item="item" index="index" separator="," open="(" close=")">
            #{item}
        </foreach>
    </update>
</mapper>
