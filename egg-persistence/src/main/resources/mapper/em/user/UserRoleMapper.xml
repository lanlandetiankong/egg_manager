<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egg.manager.persistence.em.user.db.mysql.mapper.UserRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.egg.manager.persistence.em.user.db.mysql.entity.UserRole">
        <id column="fid" property="fid"/>
        <result column="user_account_id" property="userAccountId"/>
        <result column="define_role_id" property="defineRoleId"/>
        <result column="type" property="type"/>
        <result column="remark" property="remark"/>
        <result column="state" property="state"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="last_modifyer_id" property="lastModifyerId"/>
    </resultMap>

    <!-- Dto通用查询映射结果 -->
    <resultMap id="DtoResultMap" type="com.egg.manager.persistence.em.user.pojo.dto.UserRoleDto">
        <id column="fid" property="fid"/>
        <result column="user_account_id" property="userAccountId"/>
        <result column="define_role_id" property="defineRoleId"/>
        <result column="remark" property="remark"/>
        <result column="state" property="state"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="last_modifyer_id" property="lastModifyerId"/>
        <association column="create_user_id" property="createUser" fetchType="lazy"
                     select="com.egg.manager.persistence.em.user.db.mysql.mapper.UserAccountMapper.commonSelectUserAccountById"/>
        <association column="last_modifyer_id" property="lastModifyer" fetchType="lazy"
                     select="com.egg.manager.persistence.em.user.db.mysql.mapper.UserAccountMapper.commonSelectUserAccountById"/>
    </resultMap>


    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        fid, user_account_id, define_role_id, type,
        remark,state, create_time, update_time,create_user_id,last_modifyer_id
    </sql>
    <sql id="Base_Insert_Column_List">
        fid, user_account_id, define_role_id, type,remark, state, create_time, update_time,create_user_id,last_modifyer_id
    </sql>

    <sql id="Base_Insert_Item_Column_List">
        #{item.fid},
        #{item.userAccountId},
        #{item.defineRoleId},
        #{item.type},
        #{item.remark},
        #{item.state},
        #{item.createTime},
        #{item.updateTime},
        #{item.createUserId},
        #{item.lastModifyerId}
    </sql>

    <!--
            通用查询结果列(多表查询用)
            需要参数 base_alias_name 本次查询该表的别名
        -->
    <sql id="Base_Alias_Table_List">
        ${base_alias_name}.fid,
        ${base_alias_name}.user_account_id,
        ${base_alias_name}.define_role_id,
        ${base_alias_name}.remark,
        ${base_alias_name}.state,
        ${base_alias_name}.create_time,
        ${base_alias_name}.update_time,
        ${base_alias_name}.create_user_id,
        ${base_alias_name}.last_modifyer_id
    </sql>

    <!--
            通用查询结果列(多表查询用)
            需要参数 base_alias_name 本次查询该表的别名
            参数 base_alias_col_prefix 本次查询的columnPrefix，便于与 association结合，一般建议该参数以 _ 结尾,适用于 层级关系
        -->
    <sql id="Base_Alias_TableColumn_List">
        ${base_alias_name}.fid AS ${base_alias_col_prefix}fid,
        ${base_alias_name}.user_account_id AS ${base_alias_col_prefix}user_account_id,
        ${base_alias_name}.define_role_id AS ${base_alias_col_prefix}define_role_id,
        ${base_alias_name}.remark AS ${base_alias_col_prefix}remark,
        ${base_alias_name}.state AS ${base_alias_col_prefix}state,
        ${base_alias_name}.create_time AS ${base_alias_col_prefix}create_time,
        ${base_alias_name}.update_time AS ${base_alias_col_prefix}update_time,
        ${base_alias_name}.create_user_id AS ${base_alias_col_prefix}create_user_id,
        ${base_alias_name}.last_modifyer_id AS ${base_alias_col_prefix}last_modifyer_id
    </sql>

    <select id="selectQueryPage" resultMap="DtoResultMap">
        SELECT
        <include refid="Base_Alias_Table_List">
            <property name="base_alias_name" value="eua"/>
        </include>
        FROM em_user_account eua
        <where>
            <include
                    refid="com.egg.manager.persistence.expand.db.mysql.mapper.common.DefaultCommonFuncMapper.Default_Common_QueryPage_Where_Sql">
                <property name="table_name_alias" value="eua"/>
            </include>
        </where>
        <include
                refid="com.egg.manager.persistence.expand.db.mysql.mapper.common.DefaultCommonFuncMapper.Default_Common_QueryPage_Sort_Sql">
            <property name="table_name_alias" value="eua"/>
        </include>
    </select>

    <select id="findAllRoleIdByUserAccountId" resultType="java.lang.String">
        SELECT dr.fid FROM em_define_role dr
        left JOIN em_user_role ur on dr.fid = ur.define_role_id
        <where>
            and ur.user_account_id = #{userAccountId}
            <if test="filterEnable == true">
                and ur.state = 1
            </if>
        </where>
    </select>

    <insert id="customBatchInsert">
        INSERT INTO em_user_role(
        <include refid="Base_Insert_Column_List"/>
        )
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
            <include refid="Base_Insert_Item_Column_List"/>
            )
        </foreach>
    </insert>

    <update id="batchUpdateStateByUserAccountId">
        UPDATE em_user_role
        SET state = #{stateVal}
        <if test="loginUser != null">
            ,last_modifyer_id=#{loginUser.fid}
        </if>
        where user_account_id = #{userAccountId}
        and define_role_id IN
        <foreach collection="roleIdList" item="item" index="index" separator="," open="(" close=")">
            #{item}
        </foreach>
    </update>


</mapper>
